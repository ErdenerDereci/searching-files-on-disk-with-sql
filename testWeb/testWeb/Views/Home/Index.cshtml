<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href=@Url.Content("~/Styles/bootstrap-4.0.0/dist/css/bootstrap.min.css")>
    <script src=@Url.Content("~/Styles/bootstrap-4.0.0/dist/js/bootstrap.min.js")></script>
    <link rel="stylesheet" href=@Url.Content("~/Styles/css.css")>
    <title>Document</title>
</head>
<body>

    <div class="search__container">
        @using (Html.BeginForm())
        {
            <input type="text" name="Search" id="x" placeholder="Search">
            <input type="submit" value="Ara" />
            <input type="radio" name="radio" id="normalRadio" checked value="Normal Arama" class="radio"><label class="label" for="radio1"><b>Normal Arama</b></label>
            <input type="radio" name="radio" id="sqlRadio" value="SQL Aramasi" class="radio"><label class="label" for="radio2" ><b>SQL Aramasi</b></label>
        }

    </div>


    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Path</th>
                <th scope="col">Size</th>
                <th scope="col">Proccess</th>
            </tr>
        </thead>
            <tbody>
                @{
                    for (int i = 0; i < ViewData.Count; i++)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@ViewData[i.ToString()]</td>
                            <td>Size</td>
                            <td>Procc</td>
                        </tr>
                    }
                }
            </tbody>
       
    </table>
</body>
</html>